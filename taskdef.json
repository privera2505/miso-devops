{
    "family": "python-app-dev",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "<EXECUTION_ROLE_ARN>",
    "taskRoleArn": "TASK_ROLE_ARN",
    "containerDefinitions": [
        {
        "name": "<CONTAINER_NAME>",
        "image": "<IMAGE1_NAME>",
        "essential": true,
        "portMappings": [
            {
            "containerPort": <CONTAINER_PORT>,
            "protocol": "tcp"
            }
        ],
        "environment": [
            {
            "name": "DB_USER",
            "value": "<DB_USER>"
            },
            {
            "name": "DB_PASSWORD",
            "value": "<DB_PASSWORD>"
            },
            {
            "name": "DB_NAME",
            "value": "<DB_NAME>"
            },
            {
            "name": "DB_HOST",
            "value": "<DB_HOST>"
            },
            {
            "name": "DB_PORT",
            "value": "5432"
            }
        ],
        "healthCheck": {
            "command": [
            "CMD-SHELL",
            "curl -f http://localhost:<CONTAINER_PORT>/ping || exit 1"
            ],
            "interval": 30,
            "timeout": 5,
            "retries": 3,
            "startPeriod": 60
        }
        }
    ]
}